@using ClientManagement.Core.Application.ViewModels.Client;
@model SaveClientViewModel;

@{
    ViewData["Title"] = "Delete client";
}

<div class="row mt-3">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-white">
                <h4>Are you sure you want to delete this client?</h4>
            </div>
            <div class="card-body">
                <div class="p-2">
                    <p><strong>Name: </strong> @Model.FirstName @Model.LastName</p>
                    <p><strong>Identification: </strong>@Model.IdentificationNumber</p>
                </div>
            </div>
            <div class="card-footer bg-white">
                <form method="post" asp-controller="Home" asp-action="DeleteClientPost">

                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-6">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-dark col-12">Cancel</a>
                        </div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-outline-danger col-12">Delete</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

